# another theme

set recolor               true
set recolor-keephue       true

set recolor-lightcolor    "#1e1e1e"   # Page background
set recolor-darkcolor     "#d4d4d4"   # Main text

set default-bg            "#1e1e1e"   # Background around page
set default-fg            "#d4d4d4"   # Default text color

set statusbar-bg          "#1e1e1e"
set statusbar-fg          "#569cd6"   # Accent color for status/info

set inputbar-bg           "#1e1e1e"
set inputbar-fg           "#569cd6"   # Input color

