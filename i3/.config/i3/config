# Status Bar


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    mode hide
    tray_output $mm
    tray_output $sm
    tray_output $tm
    output $mm
    output $sm
    output $tm

    hidden_state hide
    modifier Mod1+Mod4
    position top 

    status_command i3status
#    status_command SCRIPT_DIR=~/.config/i3blocks/scripts i3blocks
#    separator_symbol ""
      
      #   colors {
      # background #002b36
      # statusline #839496
