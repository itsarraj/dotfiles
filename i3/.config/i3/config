exec_always --no-startup-id xrandr --output $pm --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output DP1 --off --output $sm --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI2 --off --output VIRTUAL1 --off




## Screenshot of the entire screen
bindsym Print exec --no-startup-id sh -c 'maim --format=png "/home/$USER/Pictures/screenshot-$(date -u +'%Y-%m-%d_%H-%M-%S')-all.png" | tee >(xclip -selection clipboard -t image/png)'

## Screenshot of the active window
bindsym $mod+Print exec --no-startup-id sh -c 'maim --format=png --window $(xdotool getactivewindow) "/home/$USER/Pictures/screenshot-$(date -u +'%Y-%m-%d_%H-%M-%S')-current.png" | tee >(xclip -selection clipboard -t image/png)'

## Screenshot of a selected area
bindsym Shift+Print exec --no-startup-id sh -c 'maim --format=png --select "/home/$USER/Pictures/screenshot-$(date -u +'%Y-%m-%d_%H-%M-%S')-selected.png" | tee >(xclip -selection clipboard -t image/png)'


