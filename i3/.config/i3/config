# set $mm primary
set $mm "eDP-1" 
set $pm "eDP-1" 
set $sm "HDMI-1"
set $tm "HDMI-0"

set $mod Mod1
# set $mod Mod4 #supeh

exec --no-startup-id picom
exec --no-startup-id feh --bg-fill ~/backgrounds/vladalex.jpg
exec_always --no-startup-id autotiling


