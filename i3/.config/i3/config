# Screenshot of the entire screen
bindsym Print exec --no-startup-id sh -c 'maim -o -u --format=png | tee >(xclip -selection clipboard -t image/png -i) > "/home/$USER/Pictures/screenshot-$(date -u +'%Y-%m-%d_%H-%M-%S')-all.png"'
# # Screenshot of a selected area
bindsym Shift+Print exec --no-startup-id sh -c 'maim -s -o -u --format=png --select | tee >(xclip -selection clipboard -t image/png -i) > "/home/$USER/Pictures/screenshot-$(date -u +'%Y-%m-%d_%H-%M-%S')-selected.png"'

